{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":rebaseStalePrs"
  ],
  "pre-commit": {
    "enabled": true
  },
  "enabledManagers": [
    "docker-compose",
    "pre-commit"
  ],

  "hostRules": [
    {
      "hostType": "docker",
      "matchHost": "docker.io",
      "username": "kenlasko",
      "password": "{{ secrets.DOCKER_CREDS }}"
    }
  ],
  "packageRules": [
    {
      "matchManagers": [
        "docker-compose",
        "pre-commit"
      ],
      "matchUpdateTypes": [
        "minor", 
        "patch",
        "digest"
      ],
      "automerge": false,
      "automergeType": "branch",
      "ignoreTests": true
    }
  ]
}
